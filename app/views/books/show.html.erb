<%= render 'lists', locals: { book: @book, current_user: @current_user, user: @user } %>


  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
    <table class="table">
     <tbody>
      <tr>
        <td>
          <%= image_tag @books.user.get_profile_image(100,100) %><br>
          <%= link_to @books.user.name, user_path(@books.user) %>
        </td>
        <td>
          <%= link_to @books.title, book_path(@books) %>
        </td>
        <td>
          <%= @books.body %>
        </td>
      <% if @books.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(@books) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      <% end %>
      <% if @books.favorited_by?(current_user) %>
        <td>
         <%= link_to book_favorites_path(@books), method: :delete do %>
          ♥<%= @books.favorites.count %>
         <% end %>
        </td>
      <% else %>
        <td>
         <%= link_to book_favorites_path(@books), method: :post do %>
          ♡<%= @books.favorites.count %>
         <% end %>
        </td>
     <% end %>
      </tr>
      <div>
       <p>コメント件数：<%= @books.book_comments.count %></p>
       <% @books.book_comments.each do |book_comment| %>
        <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
        <%= book_comment.user.name %>
        <% if book_comment.user == current_user %>
         <%= link_to "削除", book_comment_path(book_comment), method: :delete %>
        <% end %>
       <% end %>
      </div>
      <div>
       <%= form_with model: [@books, @book_comment] do |f| %>
       <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
       <%= f.submit "送信" %>
       <% end %>
      </div>
     </tbody>
   </table>
  </div>
 </div>
</div>